<%#= comment.user.username %>
<%#= comment.comment %>
<%#= time_ago_in_words(comment.created_at)%>

<tbody>
<% @post.comments.each do |comment| %>
  <tr>
    <td><bold><h5><%= comment.user.email %> : <%= comment.comment %></h5></bold></td>
    <td><small><%= time_ago_in_words(comment.created_at)%></small></td>
    <br>
  </tr>
<% end %>
</tbody>